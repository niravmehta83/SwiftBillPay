@using BingHousing_BO
@model BingHousing.WebUI.MVC.Models.UserModel
@{
    ViewBag.Title = "Subscription Cart - Swift Bill Pay";
    Layout = "~/Views/Shared/_LayoutWizard.cshtml";

    Plan selectedPlan = ViewBag.SelectedPlan as Plan;    
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Subcription Cart
            </div>
            <div class="panel-body">

            <!--Cart items-->
            @if (selectedPlan != null)
            {
                <div class="row row-space">
                    <div class="col-lg-3">
                        <i class="fa fa-shopping-cart"></i> Cart
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
                    </div>
                    <div class="col-lg-3">
                        <i class="fa fa-eye"></i> Review
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#ebe4e4" /></svg>
                    </div>
                    <div class="col-lg-3">
                        <i class="fa fa-cc-paypal"></i> Make Payment
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#ebe4e4" /></svg>
                    </div>
                    <div class="col-lg-3">
                        <i class="fa fa-info"></i> Order Information
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#ebe4e4" /></svg>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-lg-2">
                        &nbsp
                    </div>
                </div>
                <!--cart item list-->
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Item Description</th>
                                <th>Price</th>
                                <th>Operation(s) </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="odd gradeX">
                                <td>
                                    <h3>@selectedPlan.PlanName</h3>
                                    <p>@selectedPlan.PlanDescription</p>
                                </td>
                                <td><h4>@selectedPlan.PlanAmount</h4></td>
                                <td>
                                    <a href="@Url.Action("Cart", "SubscriptionCart", new { id = 0  })"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4>New user details </h4><h5>(All fields are required)</h5>
                            </div>
                            <div class="panel-body">
                                <!--User information table-->
                                @Html.Partial("_ErrorPanel")
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="row row-space">
                                        <div class="col-lg-6">
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    First Name
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    Last Name
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    Address Line 1
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address Line 1" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    Address Line 2
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", placeholder = "Address Line 2" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    City
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    State
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "State" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    State
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    Zip Code
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", placeholder = "Zip Code" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    Phone Number
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "PhoneNumber", type = "text" })
                                                </div>
                                            </div>
                                            <div class="row row-space">
                                                <div class="col-lg-4">
                                                    Mobile
                                                </div>
                                                <div class="col-lg-6">
                                                    @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", placeholder = "Mobile", type = "text" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-9"></div>
                                        <div class="col-lg-3">
                                            <input type="submit" class="btn btn-success" value="Continue >>">
                                        </div>
                                    </div>
                                    <h5>These details are required to proceed with your subscription for our services.</h5>
                                }
                            </div>


                        </div>
                    </div>
                </div>

            }
            else
            {
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4">
                        <div class="well">
                            <h4>No items found in cart!!</h4>
                            <a href="@Url.Action("ShowSubscriptions","Subscription")">
                                <input type="button" value="Browse Subscription" class="btn btn-primary" />
                            </a>
                            <a href="@Url.Action("Index","Home")">
                                <input type="button" value="Go back to home" class="btn btn-primary" />
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-4"></div>

                </div>
             }
         <!-- /Cart items-->
        </div>
                <!-- /.col-lg-12 -->
        </div>
<!-- /.row -->
    </div>
</div>