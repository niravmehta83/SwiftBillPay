@using BingHousing_BO;
@using BingHousing.WebUI.MVC.Models;
@{
    ViewBag.Title = "Payment Successful - Swift Bill Pay";
    Layout = "~/Views/Shared/_LayoutWizard.cshtml";
    Plan selectedPlan = ViewBag.SelectedPlan as Plan;
    PaymentMailModel tmodel = (PaymentMailModel)ViewBag.Model;
}

@if (selectedPlan != null && tmodel != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Customer Details
                </div>
                <div class="panel-body">
                    <div class="row row-space">
                        <div class="col-lg-3">
                            <i class="fa fa-shopping-cart"></i> Cart
                            <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
                        </div>
                        <div class="col-lg-3">
                            <i class="fa fa-eye"></i> Review
                            <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
                        </div>
                        <div class="col-lg-3">
                            <i class="fa fa-cc-paypal"></i> Make Payment
                            <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
                        </div>
                        <div class="col-lg-3">
                            <i class="fa fa-info"></i> Payment Successful
                            <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#ebe4e4" /></svg>
                        </div>
                    </div>
                    <div class="row row-space">
                        <div class="col-lg-2">
                            &nbsp
                        </div>
                    </div>
                    <!--cart item list-->
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Item Description</th>
                                    <th>Price</th>
                                    <th>Operation(s) </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="odd gradeX">
                                    <td>
                                        <h3>@selectedPlan.PlanName</h3>
                                        <p>@selectedPlan.PlanDescription</p>
                                    </td>
                                    <td><h4>@selectedPlan.PlanAmount</h4></td>
                                    <td>
                                        <a href="@Url.Action("Cart", "SubscriptionCart", new { id = 0  })"><i class="fa fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>Payment Successful. Order details are below..</h4>
                                </div>
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>Order Number</th>
                                                <th>Payment ID</th>
                                                <th>Payment Date</th>
                                                <th>Payment Mode</th>
                                                <th>Payment Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="odd gradeX">
                                                <td>
                                                    @tmodel.ProjectNumber
                                                </td>
                                                <td>@tmodel.OrderId</td>
                                                <td>
                                                    @tmodel.PaymentDate
                                                </td>
                                                <td>
                                                    @tmodel.PaymentType
                                                </td>
                                                <td>
                                                    @tmodel.Amount
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8"></div>
                                    <div class="col-lg-4">
                                      <input type="button" class="btn btn-primary" value="Print" onclick="funcPrint();"/>
                                        @using (Html.BeginForm("Main", "Home"))
                                        {
                                            <input type="submit" class="btn btn-primary" value="Goto Dashboard" />
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->

        </div>
    </div>
}
<script type="text/javascript">
    function funcPrint() {
        window.print();
    }
</script>