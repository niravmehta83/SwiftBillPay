@using BingHousing_BO;
@model BingHousing.WebUI.MVC.Models.UserModel
@{
    Plan selectedPlan = ViewBag.SelectedPlan as Plan;
}

<div class="row">
    <div class="col-lg-3">
        <i class="fa fa-shopping-cart"></i> Cart
        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
    </div>
    <div class="col-lg-3">
        <i class="fa fa-eye"></i> Review
        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
    </div>
    <div class="col-lg-3">
        <i class="fa fa-cc-paypal"></i> Make Payment
        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#ebe4e4" /></svg>
    </div>
    <div class="col-lg-3">
        <i class="fa fa-info"></i> Order Information
        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#ebe4e4" /></svg>
    </div>
</div>
<div class="row">
    <div class="col-lg-2">
        &nbsp
    </div>
</div>
<!--cart item list-->
<div class="dataTable_wrapper">
    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th>Item Description</th>
                <th>Price</th>
                <th>Operation(s) </th>
            </tr>
        </thead>
        <tbody>
            <tr class="odd gradeX">
                <td>
                    <h3>@selectedPlan.PlanName</h3>
                    <p>@selectedPlan.PlanDescription</p>
                </td>
                <td><h4>@selectedPlan.PlanAmount</h4></td>
                <td>
                    <a href="@Url.Action("Cart", "SubscriptionCart", new { id = 0  })"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
@if (Model != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Customer Information & Payment Details </h4><h5>(All fields are required)</h5>
                </div>
                <div class="panel-body">
                    <!--User information table-->
                    @Html.Partial("_ErrorPanel")
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row 
                             ">
                            <div class="col-lg-6">
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        User Name
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", placeholder = "User Name", @readonly="true" })
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        First Name
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name",@readonly="true" })
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        Last Name
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name",@readonly="true" })
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        Address Line 1
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address Line 1",@readonly="true" })
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        Address Line 2
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", placeholder = "Address Line 2",@readonly="true" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        City
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City",@readonly="true" })
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        State
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "State",@readonly="true" })
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        State
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country",@readonly="true" })
                                    </div>
                                </div>
                                <div class="row row-space">
                                    <div class="col-lg-4">
                                        Zip Code
                                    </div>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", placeholder = "Zip Code", @readonly = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-lg-9"></div>
                            <div class="col-lg-3">
                                <input type="submit" class="btn btn-primary" value="Continue >>">
                                <a href="@Url.Action("CartLogout","SubscriptionCart")"><input type="button" class="btn btn-primary" value="Log out"></a>
                            </div>
                        </div>
                        
                    }
                </div>


            </div>
        </div>
    </div>
}
