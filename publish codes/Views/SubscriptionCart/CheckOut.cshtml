@using BingHousing_BO;
@model BingHousing.WebUI.MVC.Models.CheckOutModel
@{
    ViewBag.Title = "Cart - Swift Bill Pay";
    Layout = "~/Views/Shared/_LayoutWizard.cshtml";
    Plan selectedPlan = ViewBag.SelectedPlan as Plan;
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               Customer Details
            </div>
            <div class="panel-body">
                <div class="row row-space">
                    <div class="col-lg-3">
                        <i class="fa fa-shopping-cart"></i> Cart
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
                    </div>
                    <div class="col-lg-3">
                        <i class="fa fa-eye"></i> Review
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
                    </div>
                    <div class="col-lg-3">
                        <i class="fa fa-cc-paypal"></i> Make Payment
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#000000" /></svg>
                    </div>
                    <div class="col-lg-3">
                        <i class="fa fa-info"></i> Order Information
                        <svg width="100%" height="2px"><rect width="100%" height="2px" style="fill:#ebe4e4" /></svg>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-lg-2">
                        &nbsp
                    </div>
                </div>
                <!--cart item list-->
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Item Description</th>
                                <th>Price</th>
                                <th>Operation(s) </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="odd gradeX">
                                <td>
                                    <h3>@selectedPlan.PlanName</h3>
                                    <p>@selectedPlan.PlanDescription</p>
                                </td>
                                <td><h4>@selectedPlan.PlanAmount</h4></td>
                                <td>
                                    <a href="@Url.Action("Cart", "SubscriptionCart", new { id = 0  })"><i class="fa fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="row row-space">
                    <div class="col-lg-12">
                        @Html.Partial("_ErrorPanel")
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="row row-space">
                                <div class="col-lg-6">
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            First Name
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Last Name
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Address Line 1
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address Line 1" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Address Line 2
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.Address2, new { @class = "form-control", placeholder = "Address Line 2" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            City
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            State
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "State" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Zip Code
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", placeholder = "Zip Code" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">

                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Country
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Phone Number
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Company
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextBoxFor(m => m.Company, new { @class = "form-control", placeholder = "Company" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Is JOML?
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.CheckBoxFor(m => m.JOML)
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Payment Mode
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.DropDownListFor(m => m.PaymentMode, (List<SelectListItem>)ViewBag.DD, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="row row-space">
                                        <div class="col-lg-4">
                                            Comments
                                        </div>
                                        <div class="col-lg-6">
                                            @Html.TextAreaFor(m => m.Comments, new { @class = "form-control", rows = 5, id = "Comments" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-10"></div>
                                <div class="col-lg-2">
                                    <input type="submit" class="btn btn-primary" value="Continue" />
                                </div>
                            </div>
                        }
                    </div>
                 </div>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        
    </div>
</div>