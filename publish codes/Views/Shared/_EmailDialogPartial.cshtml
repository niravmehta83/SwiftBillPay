@model string
<div class="modal-dialog modal-lg">
    <div class="modal-content" id="spin">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Send Bill</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-lg-4">
                    @Html.Label("you are sending email to :")
                </div>
            
                <div class="col-lg-8">
                    <div id="divSendMail"></div>
                </div>
            </div><br />
            <div class="row">
                <div class="col-lg-4">
                    @Html.Label("Email Note (copy and paste the note) :")
                </div>
            
                <div class="col-lg-8">
                    <textarea class="form-control" rows="5" id="EmailNote"></textarea>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input type="button" class="btn btn-primary" value="Send" id="@Model" />&nbsp;
            <input type="button" class="btn btn-primary" value="Cancel" id="btncancel" data-dismiss="modal" />
        </div>
    </div>
</div>