<!DOCTYPE html>
@using System.Web.Optimization;
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="navbar-brand">Swift Bill Pay</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    @* <li> <a href="about.html">About</a>  </li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Services <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Main","Home")"><i class="fa fa-fw  fa-pie-chart"></i>&nbsp&nbsp Dashboard</a>
                            </li>
                            <li>
                                <a href="@Url.Action("CartLogin", "Cart")"><i class="fa fa-fw  fa-cc-paypal"></i>&nbsp&nbsp Rent Payment</a>
                            </li>
                            <li>
                                @if (Request.IsAuthenticated && User.Identity.Name.ToUpper() == "ADMIN")
                                {
                                    <a href="@Url.Action("EditSubscription", "Subscription")"><i class="fa fa-fw  fa-gift"></i>&nbsp&nbsp Subscriptions</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("ShowSubscriptions", "Subscription")"><i class="fa fa-fw  fa-gift"></i>&nbsp&nbsp Subscriptions</a>
                                }
                            </li>
                        </ul>
                    </li>
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    @RenderBody()

    @Styles.Render("~/bundles/bootstrap/css/theme/modern-business")
    @Scripts.Render("~/bundles/bootstrap/js/modern-business")

    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css" type="text/css" />
    @RenderSection("Scripts", required: false)
</body>

</html>
