@model BingHousing.WebUI.MVC.Models.ResetPasswordModel
@{
    ViewBag.Title = "Change Password - Swift Bill Pay";
    Layout = "~/Views/Shared/_LayoutWizard.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-key"></i> Change Password</h4>
                </div>
                <div class="panel-body">
                    @Html.Partial("_ErrorPanel")
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <div class="col">
                                @Html.TextBoxFor(m => m.NewPassword1, new { @class = "form-control", placeholder = "New Password 1", type = "password" })
                                @Html.HiddenFor(m => m.ResetPasswordToken)
                                @Html.HiddenFor(m => m.UserName)
                            </div>
                        </div>
                        <div class="form-group">
                           <div class="col">
                                @Html.TextBoxFor(m => m.ConfirmPassword1, new { @class = "form-control", placeholder = "Confirm Password 1", type = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col">
                                @Html.TextBoxFor(m => m.NewPassword2, new { @class = "form-control", placeholder = "New Password 2", type = "password" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col">
                                @Html.TextBoxFor(m => m.ConfirmPassword2, new { @class = "form-control", placeholder = "Confirm Password 2", type = "password" })
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-group btn-group-justified" value="Change password">
                        </div>
                    }

                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>


   