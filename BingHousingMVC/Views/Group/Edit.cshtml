@model BingHousingMVC.Models.GroupModel

@{
    ViewBag.Title = "Edit Group - Swift Bill Pay";
    ViewBag.PageTitle = "Edit Group";
   
}

@{
    ViewBag.Title = "Create Group - Swift Bill Pay";
    ViewBag.PageTitle = "Create Group";
   
}

<div class="row">
    <br />
    <div class="col-md-2">
        @if (Model != null && Model.GroupId > 0 && Model.PrevGroupId > 0 && Model.PrevGroupId != Model.GroupId)
        {

            <a href="@Url.Action("edit", "Group", new { GroupId = Model.PrevGroupId })">
                <button>
                    Previous Group
                </button>
            </a>

        }

       

    </div>
    <div class="col-md-8"></div>
    <div class="col-md-2">
    @if (Model != null && Model.NextGroupId > 0 && Model.NextGroupId != Model.GroupId)
    {

        <a href="@Url.Action("edit", "Group", new { GroupId = Model.NextGroupId })">
            <button>
                Next Group
            </button>
        </a>
    }</div>
</div><br /><br />



@using (Html.BeginForm("Edit", "Group", FormMethod.Post, new { id = "form" }))
{
    @Html.ValidationSummary(true)

    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GroupId)
    @Html.HiddenFor(m => m.IsActive)
    @Html.HiddenFor(m => m.CreatedOn)
    @Html.HiddenFor(m => m.LastModified)
    @Html.HiddenFor(m => m.UserId)
    
    
    <div class="row row-space">
        <div class="form-group">
            <div class="col-lg-3">
                <label>Group Name *</label>
            </div>
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.GroupName, new { @class = "textboxwidth" })
                @Html.ValidationMessageFor(m => m.GroupName)
            </div>
        </div>
    </div>
    <div class="row row-space">
        <div class="form-group">
            <div class="col-lg-3">
                <label>Group Description </label>
            </div>
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.GroupDescription, new { @class = "textboxwidth" })
                 @Html.ValidationMessageFor(m => m.GroupDescription)
            </div>
        </div>
    </div>
    <div class="row row-space">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="row row-space">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <input type="submit" class="btn btn-primary" value="Update">
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    jQuery(function ($) {
        $("#NextBillDate").mask("99-99-9999", { placeholder: 'MM/DD/YYYY' });
        });
    </script>