@model BingHousingMVC.Models.GroupModel
@using System.Web.Optimization;
@{
    ViewBag.Title = "Create Group - Swift Bill Pay";
    ViewBag.PageTitle = "Create Group";
   
}

@using (Html.BeginForm("Create", "Group", FormMethod.Post, new { id = "form" }))
{
    @Html.AntiForgeryToken()
      @Html.ValidationSummary(true)
    <div class="row row-space">
        <div class="form-group">
            <div class="col-lg-3">
                <label>Group Name *</label>
            </div>
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.GroupName, new { @class = "textboxwidth" })
                 @Html.ValidationMessageFor(m => m.GroupName)
            </div>
        </div>
    </div>
    <div class="row row-space">
        <div class="form-group">
            <div class="col-lg-3">
                <label>Group Description </label>
            </div>
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.GroupDescription, new { @class = "textboxwidth" })
                @Html.ValidationMessageFor(m => m.GroupDescription)
            </div>
        </div>
    </div>
    
    <div class="row row-space">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="row row-space">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <input type="submit" class="btn btn-primary" value="Save">
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    jQuery(function ($) {
        $("#NextBillDate").mask("99-99-9999", { placeholder: 'MM/DD/YYYY' });
        });
</script>