@model BingHousingMVC.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
   

    <fieldset>
        <legend>Registration Form</legend>


         <table class = "EditTable" style=" border:none !important;">
            <tr>
            <td class = "EditTable">
            <div class="editor-label">
                 @Html.LabelFor(m => m.UserName):
            </div></td>
           
            <td class = "EditTable">
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)<br />
                @Html.ValidationMessageFor(m => m.UserName)
            </div></td></tr>
            <tr><td class = "EditTable">
            <div class="editor-label">
                @Html.LabelFor(m => m.Password):
            </div></td>
            
         

            <td class = "EditTable"><div class="editor-field">
                @Html.PasswordFor(m => m.Password)<br />
                @Html.ValidationMessageFor(m => m.Password)
            </div></td></tr>

            <tr><td class = "EditTable">
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword):
            </div></td>
            
            

            <td class = "EditTable"><div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)<br />
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div></td></tr>

            <tr><td class = "EditTable">
            <div class="editor-label">
                @Html.LabelFor(m => m.Password2):
            </div></td>
            

            <td class = "EditTable"><div class="editor-field">
                @Html.PasswordFor(m => m.Password2)<br />
                @Html.ValidationMessageFor(m => m.Password2)
            </div></td></tr>

            <tr><td class = "EditTable">
            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword2):
            </div></td>
            
          

            <td class = "EditTable"><div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword2)<br />
                @Html.ValidationMessageFor(m => m.ConfirmPassword2)
            </div></td></tr>

            <tr><td class = "EditTable">
            <div class="editor-label">
                @Html.LabelFor(m => m.Email):
            </div></td>
            
         

            <td class = "EditTable"><div class="editor-field">
                @Html.TextBoxFor(m => m.Email)<br />
                @Html.ValidationMessageFor(m => m.Email)
            </div></td></tr>

            <tr>
            
            <td></td>
            <td class = "EditTable" style="float:left;"><p>
               <input type="submit" value="Next Step" /> </p></td></tr>
         
            </table>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
