@using BingHousing_BO;
@{
    ViewBag.Title = "ViewUsers";
}
<div align="center">
<h2>  Users</h2>
@if (ViewBag.Results != null)
{
        <table class="grid" cellpadding="0" cellspacing="0" style="margin: 10px 10px 10px 10px;">
            <thead class="gridhead">
                <tr>
                    <td>
                        <div align="center">
                            UserName
                        </div>
                    </td>
                    <td>
                        <div align="center">
                            Role
                        </div>
                    </td>

                    <td>
                        <div align="center">
                            Operations
                        </div>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (AccountUserModel L in (List<AccountUserModel>)ViewBag.Results)
                {
                    <tr>
                        <td>
                            <div align="center">
                                @L.Name

                            </div>
                        </td>
                        <td>
                            <div align="center">
                                @L.RoleName

                            </div>
                        </td>
                        <td>
                            <div align="center">
                                <a id="btnedit" href="@Url.Action("LockUser", "User", new { UserId = L.UserId })">
                                    <button>
                                        Archive</button></a> 
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
}
else
{
    <p>Sorry There is no Active Users</p>
}
</div>