@model BingHousingMVC.Models.StripeChargeModel
@{
    ViewBag.Title = "StripeCharge";
    List<SelectListItem> list = (List<SelectListItem>)ViewBag.payeelist;
    var message = ViewBag.SuccessMsg;
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4><i class="fa fa-sign-in"></i> Stripe ACH Deposit</h4>
            </div>
            <div class="panel-body">
                @Html.Partial("_ErrorPanel")
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <div class="row row-space">
                            <div class="form-group">
                                <div class="col-lg-4">
                                    <label>*Your Payment will Be Made To</label>
                                </div>
                                <div class="col-lg-5">
                                    @Html.TextBoxFor(m => m.Payee, new { @class = "form-control", placeholder = "Payee Name" });

                                    @*@Html.DropDownListFor(m => m.PayeeId, (List<SelectListItem>)ViewBag.payeelist, new { @class = "form-control" })*@
                                </div>
                            </div>
                        </div>
                        @*<div class="col-lg-3">
                                @Html.DropDownListFor(m => m.PayeeId, list, new { @id = "lstpayee", @class = "form-control" })<br />
                            </div>*@
                    </div>

                    <div class="form-group">
                        <label>Amount</label>

                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", placeholder = "Amount", type = "number" })
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-group btn-group-justified" value="Charge">
                    </div>
                }

            </div>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>
@section Scripts{
    <script type="text/javascript">
   var message = '@message';
    if(message){
        alert(message);
    }
    </script>
}


