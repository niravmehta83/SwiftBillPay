@model BingHousingMVC.Models.PlanModel
@{
    ViewBag.Title = "AddSubscriptionPlan";
}
<div align="center">
    <fieldset>
        <legend id="title" style="color: Green; font-size: large">Add Subscription Plan:</legend>
        @using (Html.BeginForm("AddSubscriptionPlan", "Subscription", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div id="divform" >
                <table>
                    <tr>
                        <td class="EditTable">
                            <div class="editor-label" id="divfn">
                                @Html.Label("Subcription Plan Name" + "*")
                            </div>
                        </td>
                        <td>
                            :
                        </td>
                        <td class="EditTable">
                            <div class="editor-field">
                                @Html.EditorFor(model => model.PlanName)<br />
                                @Html.ValidationMessageFor(model => model.PlanName)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="EditTable">
                            <div class="editor-label" id="divlnl">
                                @Html.Label("Plan Descrption" + "*")
                            </div>
                        </td>
                        <td>
                            <div id="divlns">
                                :</div>
                        </td>
                        <td class="EditTable">
                            <div class="editor-field" id="divlntb">
                                @Html.EditorFor(model => model.PlanDescription)<br />
                                @Html.ValidationMessageFor(model => model.PlanDescription)
                                <div id="divmcln" style="color: Red">
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="EditTable">
                            <div class="editor-label">
                                @Html.Label("Plan Cost" + "*")
                            </div>
                        </td>
                        <td>
                            :
                        </td>
                        <td class="EditTable">
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.PlanAmount)<br />
                                @Html.ValidationMessageFor(model => model.PlanAmount)
                            </div>
                        </td>
                        
                    </tr>
                    <tr>
                        <td class="EditTable">
                            <div class="editor-label">
                                @Html.Label("Is Admin Support Plan" + "*")
                            </div>
                        </td>
                        <td>
                            :
                        </td>
                        <td class="EditTable">
                            <div class="editor-field">
                                @Html.CheckBoxFor(model => model.IsAdminPlan)<br />
                                @Html.ValidationMessageFor(model => model.IsAdminPlan)
                            </div>
                        </td>
                    </tr>
                </table>
                <div>
                    <input type="submit" value="Add" />
                </div>
            </div>
        }</fieldset>
</div>
