<!DOCTYPE html>
<html lang="en" ng-app>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Swift Bill Pay</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    
    <meta name="viewport" content="width=device-width" />
    @Scripts.Render("~/bundles/modernizr")  
    @Scripts.Render("~/bundles/jquery")  
    @Scripts.Render("~/scripts/jqueryui")
    
    
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/bootstrap-notify.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js" type="text/javascript"></script>
    
    <style type="text/css">
    input.watermark { color: #999; }
        input {
            padding: 4px;
            text-indent: 5px;
            font-size: 14px;
        }
        </style>

</head>
<body>
    <div class="page">
        <div id="header">
            <table width="100%" cellpadding="0" cellspacing="0" style="margin-top: 0; margin-bottom: 0;
                padding: 0; border: none !Important; height: 30px;">
                <tr style="margin-top: 0 !Important; margin-bottom: 0 !Important; border: none !Important;
                    padding: 0;">
                    <td width="60%" style="margin-top: 0 !Important; margin-bottom: 0 !Important; border: none !Important;
                        padding: 0;">
                        <div id="title">
                            <h1>
                                Swift Bill Pay </h1>
                        </div>
                    </td>
                    <td style="margin-top: 0 !Important; margin-bottom: 0 !Important; border: none !Important;
                        padding: 0;">
                        <div id="logindisplay">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </td>
                </tr>
               @Html.Partial("_menuBarPartial")
            </table>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js" type="text/javascript"></script>
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
     @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">

        $(document).ready(function () {
            $('#dduser').change(function () {
                //debugger;
                $('#selectUser').submit();
            });
        });

       

    </script>
</body>
</html>
