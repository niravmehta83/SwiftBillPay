@using BingHousingMVC.Models
@model List<GroupMemberModel> 
@{
    List<GroupMemberModel> allgroupmembers = ViewBag.AllGroupMembers as List<GroupMemberModel>;               
}

@if (Model != null && Model.Count > 0)
{
    <div class="list-group">
        @foreach (var item in Model)
        {
            <button type="button" class="list-group-item" onclick="grpmem_onclick(this)" id="@("grpitem_"+item.CustomerId)">@item.CustomerName</button>
        }
    </div>
    @using (Html.BeginForm("Edit", "Group", FormMethod.Post, new { id = "form" }))
    {
        @Html.Hidden("hdnSelected", new { id = "hdnPickedMember" })
        <input type="submit" class="btn btn-primary" value="Update Group" />
    }
}
else
{
    <h3>No Records</h3>
}
